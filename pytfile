pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                git branch: 'master', url: 'https://github.com/ateeqhonyal321/abcd.git'
            }
        }

 stage('Build') {
            steps {
                echo 'Building...'
                sh 'javac greet.java'
            }
        }

 stage('Run java') {
            steps {
                echo 'Building...'
                sh 'java greet'
            }
        }

       

        stage('Run python') {
            steps {
                echo 'Running the file...'
                sh 'python3 greet.py'
            }
        }
    }

    post {
        success {
            echo 'Build succeeded!'
        }
        failure {
            echo 'Build failed.'
        }
    }
}
